// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstname String
  lastname String
  gender Gender
  email String @unique
  password String
  role Role
  budget Float
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  MEMBER
  STAFF
  ADMIN
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  descriptionDoltcini String @unique
  descriptionBryon String
  clothingType ClothingType
  retailFor Gender
  price Float
}

enum ClothingType {
  ACCESSORY
  FOOTWEAR
  TEXTILE
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  owner Owner
}

type Owner {
  firstName String
  lastName String
  email String
}